@page "/admin/products/details/{id:long}"

<h3 class="table table-sm table table-bordered table-striped">Details</h3>

<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr><td>Title</td><td>@Book?.Title</td></tr>
        <tr><th>Author</th><td>@Book?.Author</td></tr>
        <tr><th>Price</th><td>@Book?.Price.ToString("c")</td></tr>
        <tr><th>Category</th><td>@Book?.Category</td></tr>
        <tr><th>Publisher</th><td>@Book?.Publisher</td></tr>
    </tbody>
</table>

<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/products">Back</NavLink>

@code {
    [Inject]
    public IBookRepository repository { get; set; }

    [Parameter]
    public long id { get; set; }

    public Book? Book { get; set; }

    protected override void OnParametersSet()
    {
        Book = repository?.Books.FirstOrDefault(p => p.Id == id);
    }

    public string EditUrl => $"/admin/products/edit/{Book?.Id}";
}