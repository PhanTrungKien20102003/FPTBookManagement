@model ProductsListViewModel


<div class="col-2" id="categories">
	<vc:navigation-menu />
</div>
<div class="col-9">
	<div class="container px-4 px-lg-5 mt-5">
		<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
			@foreach (var b in Model?.Books ?? Enumerable.Empty<Book>())
			{
				<partial name="ProductSummary" model="b"/>
			}

		</div>
		<div class="text-center">
			<div page-model="@Model?.PagingInfo" page-action="Index" page-classes-enabled="true"
				 page-class="btn" page-class-normal="btn-outline-dark"
				 page-class-selected="btn-dark" page-url-category="@Model?.CurrentCategory!" class="btn-group align-content-center m-1"></div>
		</div>

	</div>
</div>



